@model MvcFirmaCagri.Models.Entity.tbl_Cagri
@{
    ViewBag.Title = "AnaSayfa";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>İş Takip Sistemi</title>
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/web2/starter/assets/css/style-starter.css">
    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Nunito:300,400,600,700,800,900&display=swap" rel="stylesheet">
</head>
<body class="sidebar-menu-collapsed">
    <div class="se-pre-con"></div>
    <section>
        <!-- sidebar menu start -->
        <!-- //sidebar menu end -->
        <!-- header-starts -->
        <div class="header sticky-header">
            <!-- notification menu start -->
            <div class="menu-right">
                <div class="navbar user-panel-top">
                    <div class="search-box">
                        <form action="#search-results.html" method="get">
                            <input class="search-input" placeholder="Arama" type="search" id="search">
                            <button class="search-submit" value=""><span class="fa fa-search"></span></button>
                        </form>
                    </div>
                    <div class="user-dropdown-details d-flex">
                        <div class="profile_details_left">
                            <ul class="nofitications-dropdown">
                                @Html.Action("Partial2","Default")
                                @Html.Action("Partial1","Default")
                            </ul>
                        </div>
                        <div class="profile_details">
                            <ul>
                                <li class="dropdown profile_details_drop">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" id="dropdownMenu3" aria-haspopup="true"
                                       aria-expanded="false">
                                        <div class="profile_img">
                                            <img src="@ViewBag.firmaGorsel" class="rounded-circle" alt="" />
                                            <div class="user-active">
                                                <span></span>
                                            </div>
                                        </div>
                                    </a>
                                    <ul class="dropdown-menu drp-mnu" aria-labelledby="dropdownMenu3">
                                        <li class="user-info">
                                            <h5 class="user-name">@ViewBag.firmaAdi</h5>
                                            <span class="status ml-2">Online</span>
                                        </li>
                                        <li> <a href="/Default/AktifCagrilar/"><i class="lnr lnr-users"></i>Aktif Çağrılar</a> </li>
                                        <li> <a href="/Default/PasifCagrilar/"><i class="lnr lnr-users"></i>Pasif Çağrılar</a> </li>
                                        <li> <a href="/Default/YeniCagri/"><i class="lnr lnr-users"></i>Yeni Çağrı</a> </li>
                                        <li> <a href="/Default/ProfilDuzenle/"><i class="lnr lnr-user"></i>Profilimi Düzenle</a> </li>
                                        <li class="logout"> <a href="/Default/LogOut/"><i class="fa fa-power-off"></i> Çıkış Yap</a> </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!--notification menu end -->
        </div>
        <!-- //header-ends -->
        <!-- main content start -->
        <div class="main-content">
            <!-- content -->
            <div class="container-fluid content-top-gap">
                <!-- statistics data -->
                <div class="statistics">
                    <div class="row">
                        <div class="col-xl-6 pr-xl-2">
                            <div class="row">
                                <div class="col-sm-6 pr-sm-2 statistics-grid">
                                    <div class="card card_border border-primary-top p-4">
                                        <i class="lnr lnr-users"> </i>
                                        <h3 class="text-primary number">@ViewBag.toplamCagri</h3>
                                        <p class="stat-text">Toplam Çağrı Sayısı</p>
                                    </div>
                                </div>
                                <div class="col-sm-6 pl-sm-2 statistics-grid">
                                    <div class="card card_border border-primary-top p-4">
                                        <i class="lnr lnr-eye"> </i>
                                        <h3 class="text-secondary number">@ViewBag.toplamAktifCagri</h3>
                                        <p class="stat-text">Aktif Çağrı</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-6 pl-xl-2">
                            <div class="row">
                                <div class="col-sm-6 pr-sm-2 statistics-grid">
                                    <div class="card card_border border-primary-top p-4">
                                        <i class="lnr lnr-cloud-download"> </i>
                                        <h3 class="text-success number">@ViewBag.toplamPasifCagri</h3>
                                        <p class="stat-text">Pasif Çağrı</p>
                                    </div>
                                </div>
                                <div class="col-sm-6 pl-sm-2 statistics-grid">
                                    <div class="card card_border border-primary-top p-4">
                                        <i class="lnr lnr-cart"> </i>
                                        <h3 class="text-danger number">@ViewBag.sektor</h3>
                                        <p class="stat-text">Sektör</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- //statistics data -->
        
                <!-- accordions -->
                <div class="accordions">
                    <div class="row">
                        <!-- accordion style 1 -->
                        <div class="col-lg-12 mb-4">
                            <div class="card card_border">
                                <div class="card-header chart-grid__header">
                                    Yardım Menüsü
                                </div>
                                <div class="card-body">
                                    <div class="accordion" id="accordionExample">
                                        <div class="card">
                                            <div class="card-header bg-white p-0" id="headingOne">
                                                <a href="#" class="card__title p-3" data-toggle="collapse" data-target="#collapseOne"
                                                   aria-expanded="true" aria-controls="collapseOne">Mesajlar ile ilgili progremler</a>
                                            </div>
                                            <div id="collapseOne" class="collapse show" aria-labelledby="headingOne"
                                                 data-parent="#accordionExample">
                                                <div class="card-body para__style">
                                                    IT ile iletişime geçin tell +90 555 555 55 55
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header bg-white p-0" id="headingTwo">
                                                <a href="#" class="card__title p-3" data-toggle="collapse" data-target="#collapseTwo"
                                                   aria-expanded="false" aria-controls="collapseTwo">Çağrılar ile ilgili proglemler</a>
                                            </div>
                                            <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
                                                <div class="card-body para__style">
                                                    IT ile iletişime geçin tell +90 555 555 55 55
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card">
                                            <div class="card-header bg-white p-0" id="headingThree">
                                                <a href="#" class="card__title p-3" data-toggle="collapse" data-target="#collapseThree"
                                                   aria-expanded="false" aria-controls="collapseThree">
                                                   Hesap ile ilgili proglemler
                                                </a>
                                            </div>
                                            <div id="collapseThree" class="collapse" aria-labelledby="headingThree"
                                                 data-parent="#accordionExample">
                                                <div class="card-body para__style">
                                                    IT ile iletişime geçin tell +90 555 555 55 55
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- //accordion style 1 -->
                    </div>
                </div>
                <!-- //accordions -->               
            </div>
            <!-- //content -->
        </div>
        <!-- main content end-->
    </section>
    <!--footer section start-->
    <footer class="dashboard">
        <p>
            &copy 2020 Collective. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="_blank"
                                                                      class="text-primary">W3layouts.</a>
        </p>
    </footer>
    <!--footer section end-->
    <!-- move top -->
    <button onclick="topFunction()" id="movetop" class="bg-primary" title="Go to top">
        <span class="fa fa-angle-up"></span>
    </button>
    <script>
        // When the user scrolls down 20px from the top of the document, show the button
        window.onscroll = function () {
            scrollFunction()
        };

        function scrollFunction() {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                document.getElementById("movetop").style.display = "block";
            } else {
                document.getElementById("movetop").style.display = "none";
            }
        }

        // When the user clicks on the button, scroll to the top of the document
        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }</script>
    <!-- /move top -->

    <script src="~/web2/starter/assets/js/jquery-3.3.1.min.js"></script>
    <script src="~/web2/starter/assets/js/jquery-1.10.2.min.js"></script>
    <!-- chart js -->
    <script src="~/web2/starter/assets/js/Chart.min.js"></script>
    <script src="~/web2/starter/assets/js/utils.js"></script>
    <!-- //chart js -->
    <!-- Different scripts of charts.  Ex.Barchart, Linechart -->
    <script src="~/web2/starter/assets/js/bar.js"></script>
    <script src="~/web2/starter/assets/js/linechart.js"></script>
    <!-- //Different scripts of charts.  Ex.Barchart, Linechart -->

    <script src="~/web2/starter/assets/js/jquery.nicescroll.js"></script>
    <script src="~/web2/starter/assets/js/scripts.js"></script>
    <!-- close script -->
    <script>
        var closebtns = document.getElementsByClassName("close-grid");
        var i;

        for (i = 0; i < closebtns.length; i++) {
            closebtns[i].addEventListener("click", function () {
                this.parentElement.style.display = 'none';
            });
        }</script>
    <!-- //close script -->
    <!-- disable body scroll when navbar is in active -->
    <script>
        $(function () {
            $('.sidebar-menu-collapsed').click(function () {
                $('body').toggleClass('noscroll');
            })
        });</script>
    <!-- disable body scroll when navbar is in active -->
    <!-- loading-gif Js -->
    <script src="~/web2/starter/assets/js/modernizr.js"></script>
    <script>
        $(window).load(function () {
            // Animate loader off screen
            $(".se-pre-con").fadeOut("slow");;
        });</script>
    <!--// loading-gif Js -->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/web2/starter/assets/js/bootstrap.min.js"></script>
</body>
</html>
