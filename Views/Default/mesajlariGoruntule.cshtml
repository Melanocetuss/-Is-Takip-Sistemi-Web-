@using MvcFirmaCagri.Models.Entity
@model List<tbl_Mesajlar>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Mesajları Görüntüle</title>
</head>

<body>
    <div class="accordion" id="accordionExample">
        @for (int i = 0; i < Model.Count; i++)
        {
            var mesaj = Model[i]; // mesajı alın
            string collapseId = "collapse" + i; // her bir akordeona özel id oluşturun
            string buttonId = "heading" + i; // her butona özel id oluşturun
            <div class="accordion-item">
                <h2 class="accordion-header" id="@buttonId">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                        @mesaj.tbl_Firmalar1.FIRMA_ADI - @mesaj.KONU - @mesaj.TARIH
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <pre>@mesaj.MESAJ</pre>
                    </div>
                </div>
            </div>
        }
    </div>
</body>

</html>
