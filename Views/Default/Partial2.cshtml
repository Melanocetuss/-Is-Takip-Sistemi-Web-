@using MvcFirmaCagri.Models.Entity
@model List<tbl_Cagri>

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
        <i class="fa fa-bell-o"></i><span class="badge blue">@ViewBag.toplamAktifCagri</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <div class="notification_header">
                <h3>Aktif Çağrılar: @ViewBag.toplamAktifCagri</h3>
            </div>
        </li>

        @foreach (var x in Model)
        {
            <li>
                <a href="/Default/CagriDetay/@x.ID_CAGRI" class="grid">
                    <div class="user_img"><img src="@x.tbl_Firmalar.GORSEL" alt=""></div>
                    <div class="notification_desc">
                        <p>@x.KONU</p>                    
                        <span>@x.TARIH</span>
                    </div>
                </a>
            </li>
        }
            <li>
                <div class="notification_bottom">
                    <a href="/Default/AktifCagrilar/" class="bg-primary">Tüm Aktif Çağrılara Git</a>
                </div>
            </li>
        </ul>
</li>